<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <title>Projects</title>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <header><%- include('../partials/header'); %></header>
  <main class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Danh sách dự án</h1>
      <a href="/projects/addProjectPage" class="btn btn-success d-flex justify-content-center align-items-center">
        <svg width="16px" height="16px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="#ffffff" d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 144L48 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l144 0 0 144c0 17.7 14.3 32 32 32s32-14.3 32-32l0-144 144 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-144 0 0-144z"/></svg>
        Thêm Dự Án</a>
    </div>

    <!-- Phần lọc dữ liệu -->
    <div class="card p-3 mb-4 shadow-sm">
      <div class="row g-2">
        <div class="col-md-4">
          <label for="search" class="form-label">Tìm kiếm</label>
          <input type="text" id="search" class="form-control" value="<%= search %>">
        </div>
        <div class="col-md-4">
          <label for="sortBy" class="form-label">Sắp xếp theo</label>
          <select id="sortBy" class="form-select">
            <option value="id" <%= sortBy==="id" ? "selected" : "" %>>ID</option>
            <option value="name" <%= sortBy==="name" ? "selected" : "" %>>Tên</option>
            <option value="course" <%= sortBy==="course" ? "selected" : "" %>>Khóa học</option>
            <option value="year" <%= sortBy==="year" ? "selected" : "" %>>Năm học</option>
          </select>
        </div>
        <div class="col-md-4">
          <label for="order" class="form-label">Thứ tự</label>
          <select id="order" class="form-select">
            <option value="asc" <%= order==="asc" ? "selected" : "" %>>Tăng dần</option>
            <option value="desc" <%= order==="desc" ? "selected" : "" %>>Giảm dần</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Hiển thị dữ liệu -->
    <% if (projects.length > 0) { %>
      <div class="row">
        <% projects.forEach(project => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
               <!-- Ảnh đại diện -->
          <% if (project.images && project.images.length > 0) { %>
            <img src="/uploads/<%= project.images[0] %>" class="card-img-top img-fluid project-img" alt="Ảnh dự án" style="height: 200px; object-fit: cover;">
          <% } else { %>
            <img src="https://www.vietnamworks.com/hrinsider/wp-content/uploads/2023/12/hinh-anh-thien-nhien-dep-3d-001.jpg" class="card-img-top img-fluid project-img" style="height: 200px; object-fit: cover;" alt="Ảnh mặc định">
          <% } %>
              <div class="card-body">
                <h5 class="card-title">
                  <a href="/projects/<%= project.id %>" class="text-decoration-none"><%= project.name %></a>
                </h5>
                <p class="card-text"><strong>Khóa học:</strong> <%= project.course %></p>
                <p class="card-text"><strong>Năm học:</strong> <%= project.year %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <nav>
          <ul class="pagination">
            <% if (page > 1) { %>
              <li class="page-item">
                <a class="page-link" href="/projects?page=<%= page - 1 %>&limit=5&search=<%= search %>&sortBy=<%= sortBy %>&order=<%= order %>">Trước</a>
              </li>
            <% } %>
    
            <% let pages = [];
              if (totalPages <= 5) {
                pages = Array.from({ length: totalPages }, (_, i) => i + 1);
              } else if (page <= 3) {
                pages = [1, 2, 3, 4, 5];
              } else if (page >= totalPages - 2) {
                pages = [totalPages - 4, totalPages - 3, totalPages - 2, totalPages - 1, totalPages];
              } else {
                pages = [page - 2, page - 1, page, page + 1, page + 2];
              }
            %>
    
            <% pages.forEach(p => { %>
              <li class="page-item <%= p === page ? 'active' : '' %>">
                <a class="page-link" href="/projects?page=<%= p %>&limit=5&search=<%= search %>&sortBy=<%= sortBy %>&order=<%= order %>">
                  <%= p %>
                </a>
              </li>
            <% }) %>
    
            <% if (page < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="/projects?page=<%= page + 1 %>&limit=5&search=<%= search %>&sortBy=<%= sortBy %>&order=<%= order %>">Sau</a>
              </li>
            <% } %>
          </ul>
        </nav>
      </div>
    <% } else { %>
      <p class="text-danger text-center mt-3">Emty</p>
    <% } %>
    
  </main>

  <footer><%- include('../partials/footer'); %></footer>
  <script>
    function filterProjects() {
      const searchInput = document.getElementById("search");
      const sortBySelect = document.getElementById("sortBy");
      const orderSelect = document.getElementById("order");

      const params = new URLSearchParams(window.location.search);
      params.set("search", searchInput.value);
      params.set("sortBy", sortBySelect.value);
      params.set("order", orderSelect.value);
      params.set("page", 1); 

      window.location.href = "/projects?" + params.toString();
    }

    document.addEventListener("DOMContentLoaded", function () {
      document.getElementById("search").addEventListener("input", filterProjects);
      document.getElementById("sortBy").addEventListener("change", filterProjects);
      document.getElementById("order").addEventListener("change", filterProjects);
    });
  </script>

</body>
</html>

